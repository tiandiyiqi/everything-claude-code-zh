{
  "version": "3.0",
  "observation": {
    "enabled": true,
    "store_path": "~/.claude/homunculus/observations.jsonl",
    "max_file_size_mb": 10,
    "archive_after_days": 7,
    "capture_tools": ["Edit", "Write", "Bash", "Read", "Grep", "Glob"],
    "ignore_tools": ["TodoWrite"]
  },
  "instincts": {
    "personal_path": "~/.claude/homunculus/instincts/personal/",
    "inherited_path": "~/.claude/homunculus/instincts/inherited/",
    "min_confidence": 0.3,
    "auto_approve_threshold": 0.7,
    "confidence_decay_rate": 0.02,
    "max_instincts": 100
  },
  "observer": {
    "enabled": false,
    "model": "haiku",
    "run_interval_minutes": 5,
    "min_observations_to_analyze": 20,
    "patterns_to_detect": [
      "user_corrections",
      "error_resolutions",
      "repeated_workflows",
      "tool_preferences",
      "file_patterns",
      "communication_patterns",
      "skill_extraction_candidates"
    ]
  },
  "evolution": {
    "cluster_threshold": 3,
    "evolved_path": "~/.claude/homunculus/evolved/",
    "auto_evolve": false
  },
  "integration": {
    "skill_creator_api": "https://skill-creator.app/api",
    "backward_compatible_v1": true
  },
  "communication": {
    "enabled": true,
    "expressions_view": "~/.claude/homunculus/views/expressions.md",
    "project_expressions_dir": ".claude/communication/",
    "subtypes": ["terminology", "phrasing", "project-concept"],
    "default_confidence": {
      "auto_detected": 0.5,
      "user_explicit": 0.7
    },
    "instinct_prefix": "comm-"
  },
  "code-navigation": {
    "enabled": true,
    "navigation_view": "~/.claude/homunculus/views/code-navigation.md",
    "project_mappings_dir": ".claude/code-navigation/",
    "subtypes": ["semantic-mapping"],
    "default_confidence": {
      "implicit_confirmation": 0.5,
      "explicit_open": 0.6,
      "from_codemap": 0.6
    },
    "confidence_growth": {
      "implicit_confirmation": 0.03,
      "explicit_open": 0.04,
      "from_codemap": 0.04
    },
    "confidence_decay": {
      "30_days_unused": -0.1,
      "60_days_unused": -0.2,
      "90_days_unused": "stale"
    },
    "confidence_max": 0.95,
    "instinct_prefix": "code-nav-",
    "max_synonyms_per_mapping": 10,
    "max_mappings_per_project": 100,
    "evolve_threshold": 10
  },
  "claudeception": {
    "enabled": true,
    "candidates_path": "~/.claude/homunculus/skill-candidates/",
    "min_signal_strength": 0.6,
    "auto_remind_threshold": 0.8,
    "signals": [
      "error_fix_cycle",
      "long_investigation",
      "non_standard_solution",
      "config_discovery"
    ]
  }
}
